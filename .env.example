# ===========================================
# Media4U Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git

# -------------------------------------------
# Convex (Backend)
# -------------------------------------------
NEXT_PUBLIC_CONVEX_URL=https://your-deployment.convex.cloud
CONVEX_DEPLOYMENT=your-deployment-name

# -------------------------------------------
# Site URLs
# -------------------------------------------
SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_CONVEX_SITE_URL=http://localhost:3000

# -------------------------------------------
# Authentication (Better Auth)
# -------------------------------------------
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-here

# -------------------------------------------
# Email (Resend)
# -------------------------------------------
RESEND_API_KEY=re_xxxxxxxxxxxxx
FROM_EMAIL=hello@yourdomain.com

# -------------------------------------------
# Stripe Payments
# -------------------------------------------
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxx

# Webhook Secret:
# - Local: stripe listen --forward-to localhost:3000/stripe/webhook
# - Production: Create webhook at https://dashboard.stripe.com/webhooks
#   Endpoint URL: https://yourdomain.com/stripe/webhook
#   Events: checkout.session.completed, invoice.paid, customer.subscription.updated, customer.subscription.deleted
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# Price IDs - Create products at https://dashboard.stripe.com/products
# Then copy the Price ID (starts with price_) for each
STRIPE_PRICE_STARTER=price_xxxxxxxxxxxxx
STRIPE_PRICE_PROFESSIONAL=price_xxxxxxxxxxxxx
STRIPE_PRICE_WEBCARE=price_xxxxxxxxxxxxx

# -------------------------------------------
# Social Media Links (Optional)
# -------------------------------------------
NEXT_PUBLIC_WHATSAPP_NUMBER=
NEXT_PUBLIC_TWITTER_URL=
NEXT_PUBLIC_INSTAGRAM_URL=
NEXT_PUBLIC_LINKEDIN_URL=
